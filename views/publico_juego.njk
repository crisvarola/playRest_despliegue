{% extends "publico_base.njk" %}

{% block titulo %}Juegos | Ficha{% endblock %}

{% block contenido %}

    <h1>Ficha de Juego</h1>

<div class="card" style="width: 30rem;">
  <img src="/public/uploads/{{ juego.imagen }}" class="card-img-top" alt="Imagen del juego">
  <div class="card-body">
    <h5 class="card-title">{{ juego.nombre }}</h5>
    <p class="card-text">{{ juego.descripcion }}</p>
    <p class="card-text">Edad: {{ juego.edad }}</p>
    <p class="card-text">NÂº Jugadores: {{ juego.jugadores }}</p>
    <p class="card-text">Tipo: {{ juego.tipo }}</p>
    <p class="card-text">Precio: {{ juego.precio }}</p>
  </div>
  {% if juego.ediciones %}
  <div class="card-footer">
    <p class="card-text">Ediciones del juego</p>
    <ul>
        {% for edicion in juego.ediciones %}
            <li class="text-muted text-decoration-none">{{ edicion.anyo }} - {{ edicion.edicion }}</li>
        {% endfor %}
        </ul>
  </div>
  {% endif %}
</div>

{% endblock %}
